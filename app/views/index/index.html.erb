<section>
  <h1>Stats</h1>
  <dl>
    <dt>Death Count:</dt>
    <dd><%= @kills.size %></dd>
    <dt>Serial Killer:</dt>
    <dd><%= @serial_killer.name %></dd>
    <dt>Latest Kill:</dt>
    <dd><%= render partial: 'kills/kill', object: @latest_kill %></dd>
    <dt>First Kill:</dt>
    <dd><%= render partial: 'kills/kill', object: @first_kill %></dd>
  </dl>
</section>

<section id="graph">
</section>

<script>
  $(document).ready(function() {
      var g = new Graph();
      g.edgeFactory.template.style.directed = true;
      
      <% previous_root = nil %>
      <% @roots.each do |root| %>
        <% 
          root.column = previous_root.try(:width) || 0
          root.column += 1
          root.depth = 1
        %>
        <%= root.print_nodes.html_safe %>
        <% previous_root = root %>
      <% end %>
      
      var layouter = new Graph.Layout.Ordered(g, topological_sort(g));
      var renderer = new Graph.Renderer.Raphael('graph', g, 900, 600);
  });
</script>
